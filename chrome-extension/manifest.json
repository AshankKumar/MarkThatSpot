{
    "manifest_version": 2,
    "name": "My Chrome Extension",
    "version": "1.0",
    "description": "A Chrome extension built with TypeScript",
    "permissions": ["activeTab", "storage"],
    "background": {
      "scripts": ["dist/background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["dist/contentScript.js"]
      }
    ],
    "browser_action": {
      "default_popup": "dist/popup.html"
    }
}
  